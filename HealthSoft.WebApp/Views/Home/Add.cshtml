@model HealthSoft.WebApp.Models.CreateAppointmentViewModel
@{
    ViewData["Title"] = "Create Appointment";
}

<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="AppointmentDate">Appointment Date and Time</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate" required />
    </div>

    <div class="form-group">
        <label for="DoctorId">Select Doctor</label>
        <select class="form-control" id="DoctorId" name="DoctorId" required>
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@doctor.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="PatientId">Select Patient</label>
        <select class="form-control" id="PatientId" name="PatientId" required>
            @foreach (var patient in ViewBag.Patients )
            {
                <option value="@patient.Id">@patient.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Reason">Reason for Appointment</label>
        <textarea class="form-control" id="Reason" name="Reason" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create Appointment</button>
</form>
