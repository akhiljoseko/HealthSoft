@model HealthSoft.WebApp.Models.CreateAppointmentViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

<h4>Edit Appointment</h4>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="AppointmentDate">Appointment Date and Time</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate" 
               value="@Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
    <label for="DoctorId">Select Doctor</label>
    <select class="form-control" id="DoctorId" name="DoctorId" required>
        @foreach (var doctor in ViewBag.Doctors)
        {
            <option value="@doctor.Id" selected=@(doctor.Id == Model.DoctorId ? "selected='selected'" : "")>@doctor.Name</option>
        }

    </select>
</div>

<div class="form-group">
    <label for="PatientId">Select Patient</label>
    <select class="form-control" id="PatientId" name="PatientId" required>
        @foreach (var patient in ViewBag.Patients)
        {
            <option value="@patient.Id" selected=@(patient.Id == Model.PatientId ? "selected='selected'" : "")>@patient.Name</option>
        }
    </select>
</div>



    <div class="form-group">
        <label for="Reason">Reason for Appointment</label>
        <textarea class="form-control" id="Reason" name="Reason" rows="4" required>@Model.Reason</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
